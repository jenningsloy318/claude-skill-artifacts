{
  "name": "context-keeper",
  "description": "Automatically summarize and persist conversation context before compaction, with automatic context restoration on resume",
  "version": "1.0.0",
  "author": {
    "name": "Jennings L",
    "email": "jennings@example.com"
  },
  "homepage": "https://github.com/jenningsloy318/super-skill-claude-artifacts",
  "repository": "https://github.com/jenningsloy318/super-skill-claude-artifacts",
  "license": "MIT",
  "keywords": ["context", "keeper", "persistence", "memory", "compaction", "summary", "continuity"],
  "hooks": {
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/precompact.py",
            "timeout": 120
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup|resume|compact|clear",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/session_start.py",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
